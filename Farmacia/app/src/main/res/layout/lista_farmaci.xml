<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView"
    android:layout_gravity="center_horizontal">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/account_settings">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:id="@+id/linearLayout"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Lista Farmaci"
            android:id="@+id/textView10"
            android:autoText="false"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:textColor="#ff12a215" />

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:id="@+id/lvFarmaci"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Riepilogo ordine"
        android:id="@+id/txt_prezzoFarmaco"
        android:layout_marginTop="20dp"
        android:textColor="#ff12a215" />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/lvRiepilogo"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROSEGUI"
        android:id="@+id/bt_continua"
        android:layout_gravity="center_horizontal"
        android:textColor="#ff12a215" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOME"
        android:id="@+id/bt_home"
        android:layout_gravity="center_horizontal"
        android:textColor="#ff12a215" />


</LinearLayout>
    </ScrollView>